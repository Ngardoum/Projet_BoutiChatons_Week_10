<div class="container">
  <h1 class="my-4"><%= @product.title %></h1>

  <div class="row">
    <div class="col-md-6">
      <%= image_tag @product.image_url, class: 'img-fluid' %>
    </div>
    <div class="col-md-6">
      <h3><%= number_to_currency(@product.price) %></h3>
      <p><%= @product.description %></p>

      <%= form_with url: cart_items_path, local: true do |form| %>
        <%= form.hidden_field :product_id, value: @product.id %>
        <div class="form-group">
          <%= form.label :quantity, 'QuantitÃ©' %>
          <%= form.number_field :quantity, value: 1, min: 1, class: 'form-control' %>
        </div>
        <%= form.submit 'Ajouter au Panier', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>

